    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script>

window.onload = function () {

    $('#ShowContactForm').modal();
   
}


 function ContinueTheTour()
 {
        event.preventDefault();

          $("#ContinueButton").prop('disabled', true);

        var Email=$("#inputEmailAddress").val();
        var ddHaveProject=$("#ddHaveProject").val();
        var ddUseCase = $("#ddUseCase").val();
        
         $('#msgEmailIssue').hide();

        
        //Use AJAX and submit the form data to the server
        $.ajax({
            url: "/Welcome",
           // headers: headers,  use this for special header info like security auth
            method: 'POST',
             data: JSON.stringify({ email: Email, HaveProject: ddHaveProject, UseCase: ddUseCase  }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            // This prevents JQuery from trying to append the form as a querystring
            processData: false,
        
         }).done(function(data)
            {
                $("#ContinueButton").prop('disabled', false);

                if (data.status==0)
                {
                     $('#msgEmailIssue').show();
                     return;
                }
                 $(location).attr('href', '');
             
            })
            .fail(function(data)
            {
                   document.getElementById('lblErrorMessage').innerHTML = 'Unable to continue, please try again later. Error: ' + data.responseText ;
            
            })
        
 }       
</script>


<nav class="navbar navbar-inverse">
